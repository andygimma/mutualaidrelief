<html>
	<head>
		<title>Mutual Aid Relief</title>
		<meta http-equiv="content-type" content="text/html; charset=utf-8" />
		<meta name="description" content="" />
		<meta name="keywords" content="" />
		<link href="http://fonts.googleapis.com/css?family=Source+Sans+Pro:300,600" rel="stylesheet" type="text/css" />
		<!--[if lte IE 8]><script src="js/html5shiv.js"><![endif]-->
		<script src="/js/jquery.min.js"></script>
		<script src="/js/jquery.dropotron.js"></script>
		<script src="/js/skel.min.js"></script>
		<script src="/js/skel-panels.min.js"></script>
		<script src="/js/init.js"></script>
		<noscript>
			<link rel="stylesheet" href="/css/skel-noscript.css" />
			<link rel="stylesheet" href="/css/style.css" />
			<link rel="stylesheet" href="/css/style-n1.css" />
		</noscript>
		<script>
		$(function() {

		  $( "#incident" ).change(function() {
		  var selected = $( this ).val();
		  if (selected == "none") {
		    window.location.href = "/admin-users/";
		  } else {
		    window.location.href = "/admin-users/" + selected;
		  }
		  });
		
		});
		</script>
		<script>
		function searchEmail() {
		  var email = $( "#email" ).val();
		  window.location.href = "/admin-user-by-email/" + email;
		  

		}
		</script>
		<script>
		function getJSON() {
		  var incident = $( "#incident" ).val();
		  if (incident == "none") {
		      window.location.href = "/admin-users-download/json";
		    } else {
		      window.location.href = "/admin-users-download/" + incident + "/json";
		    }
		}
		
		function getCSV() {
		  var incident = $( "#incident" ).val();
		  if (incident == "none") {
		      window.location.href = "/admin-users-download/csv";
		    } else {
		      window.location.href = "/admin-users-download/" + incident + "/csv";
		    }
		}
		
		</script>
	</head>
	<body class="left-sidebar">

		<!-- Header Wrapper -->
			<div id="header-wrapper">
						
				<!-- Header -->
					<div id="header" class="container">
						
						<!-- Logo -->
							<h1 id="logo"><a href="/">Mutual Aide Relief</a></h1>
						
						<!-- Nav -->
							<nav id="nav">
								<ul>
								    <li><a href="/inventory">Inventory</a></li>
								    <li><a href="/cases">Cases</a></li>
								    <li class="break">
								    <li><a href="/help">Help</a></li>
								    <%if (signed_in) { %>
								      <li><a href="/signout">Signout</a></li>
								    <% } else { %>
								      <li><a href="/signin">Signin</a></li>
								    <% } %>
								</ul>
							</nav>

					</div>

			</div>

		<!-- Main Wrapper -->
			<div class="wrapper">

				<div class="container">
					<div class="row" id="main">
						<div class="4u">

							<!-- Sidebar -->
								<section id="sidebar">
									<section>
										<header>
											<h3>Admin</h3>
										</header>
										<ul>
																											<li><a href="/admin-users">Users</a></li>
										<li><a href="/admin-incidents">Incidents</a></li>
										<li><a href="/admin-cases">Cases</a></li>
										<li><a href="/admin-warehouses">Warehouses</a></li>
										<li><a href="/admin-inventory">Inventory</a></li>
										<li><a href="/admin-orders">Orders</a></li>
										<li><a href="/admin-vehicles">Vehicles</a></li>

										</ul>
									
									</section>
								
								</section>
					
						</div>
						<div class="8u skel-cell-mainContent">
					
							<!-- Content -->
								<article id="content">
									<header>
										
										<h2>Users</h2>
										
										<% if (typeof messages != 'undefined') { %>
										  <p class="messages"><%= messages %></p>
										<% } else {} %>
										<span>View edit or delete any user</span>
									           <div class="row">
										  <div class="12u">
																											    <form>

										  <select id="incident" name="incident">
											  <option value="none">Show All Users</option>
											  <% incidents.forEach( function( incident ){ %>
											  <% if (incident.name == selected_incident) { %>
										    <option selected="selected" value="<%= incident.name %>"><%= incident.name %></option>
										    <% } else { %>
										    <option value="<%= incident.name %>"><%= incident.name %></option>
										    <% } %>
										    <% }); %>
										  </select>
										  </form>
										  </div>
									   </div>
									   
									   <div class="row">
										  <div class="3u">
										  <a onclick="getCSV()" class="button button-icon icon">Download CSV</a>
										  </div>
										  
										  <div class="3u">
										  <a onclick="getJSON()" class="button button-icon icon">Download JSON</a>
										  </div>
										  
										  <div class="4u">
										  <form>
													<input id="email" name="email" placeholder="Search By Email" type="text" class="text" />
												
										  
										  </div>
										  
										  <div class="2u">
										  <a href="#" onclick="searchEmail()" class="button button-icon icon icon-envelope">Search</a>
										  </div>
										  </form>						
									  </div>
										<% users.forEach( function( user ){ %>
							
										
											<div class="row">
											<div class="12u">
									   <p> <%= user.email %> | <%= user.modified_at %> | <%= user.role %> | <%=user.authorized%>
									   <br>
									   <a class="button button-icon icon" href="admin-edit-users/<%=user._id%>">Edit</a> 
									   
									   <a class="button button-icon icon" href="admin-remove-user/<%=user._id%>" onclick="return confirm('Are you sure want to remove the user from the database?\n\nThis cannot be undone.');">Remove</a></p>
									   	</div>
										</div>
									 <% }); %>
									</header>
								
								</article>

						</div>
					</div>
					
				</div>
			</div>

		<!-- Footer Wrapper -->
			<div id="footer-wrapper">

				<!-- Footer -->
					<div id="footer" class="container">
						
					</div>

				<!-- Copyright -->
					<div id="copyright" class="container">
						<ul class="menu">
							<li>&copy; Untitled. All rights reserved.</li>
							<li>Demo images: <a href="http://ineedchemicalx.deviantart.com/">Felicia Simion</a></li>
							<li>Design: <a href="http://html5up.net/">HTML5 UP</a></li>
						</ul>
					</div>

			</div>

	</body>
</html>