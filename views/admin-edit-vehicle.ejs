										<div class="row">
											<div class="12u">
												<input id="emergency_contact_name" name="emergency_contact_name" value="<%= vehicle.emergency_contact_name %>" type="text" class="text" />
											</div>
										</div>
										<div class="row">
											<div class="12u">
												<input id="emergency_contact_number" name="emergency_contact_number" value="<%= vehicle.emergency_contact_number %>"  type="text" class="text" />
											</div>
										</div>
										
										<input type="hidden" name="vehicle_id" value="<%= vehicle._id %>">

										<div class="row">
											<div class="12u">
												<a href="#" onclick="checkAndSubmit()" class="button button-icon icon icon-envelope">Submit</a>
											</div>
										</div>
									</form>
