		<!-- Main Wrapper -->
			<div class="wrapper">

				<div class="container">
					<div class="row" id="main">
						<div class="4u">

							<!-- Sidebar -->
								<section id="sidebar">
									<section>
										<header>
											<h3>Admin</h3>
										</header>
										<ul>
										<li><a href="/add-warehouse">Add A Warehouse</a></li>
										<li><a href="/add-vehicle">Add A Delivery Vehicle</a></li>
										</ul>
										
									</section>
									
								</section>
					
						</div>
						<div class="8u skel-cell-mainContent">
					
							<!-- Content -->
								<article id="content">
									<header>
										<h2>Add a vehilce</h2>
										<span>All of the fields on this form are required.</span>
									</header>
									<% if (typeof messages != 'undefined') { %>
									<p class="messages"><%= messages %></p>
									<% } %>
									<form method="post" action="/admin-edit-vehicle">
										<span id="email_error"></span>
										<br>
										<span id="passwords_match_error"></span>
										<div class="row">
										<div class="12u">
										  <select id="incident" name="incident">
										  <option value="none">Click to choose an incident</option>
									
										    <% incidents.forEach( function( incident ){ %>
										    <% if (vehicle.incident_name == incident.name) { %>
										    <option selected="selected" value="<%= incident._id %>"><%= incident.name %></option>
										    
										    <% } else { %>
										    <option value="<%= incident._id %>"><%= incident.name %></option>
										    <% } %>
										    <% }); %>
										  </select>
										</div>
										</div>
										<div class="row">
											<div class="12u">
												<input id="owner_name" name="owner_name" value="<%= vehicle.owner_name %>" type="text" class="text" />
											</div>
										</div>
										<div class="row">
											<div class="12u">
												<input id="other_drivers" name="other_drivers" value="<%= vehicle.other_drivers %>" type="text" class="text" />
											</div>
										</div>
										<div class="row">
											<div class="12u">
												<input id="phone1" name="phone1" value="<%= vehicle.phone1 %>"  type="text" class="text" />
											</div>
										</div>
										<!--<div class="row">
											<div class="12u">
												<input id="phone2" name="phone2" placeholder="Secondary Phone Number" type="text" class="text" />
											</div>
										</div>-->
										<div class="row">
											<div class="12u">
												<input id="owner_email" name="owner_email" value="<%= vehicle.owner_email %>" type="text" class="text" />
											</div>
										</div>
										<div class="row">
											<div class="12u">
												<input id="owner_twitter" name="owner_twitter" value="<%= vehicle.owner_twitter %>" type="text" class="text" />
											</div>
										</div>
									
										<div class="row">
											<div class="12u">
											  <select id="vehicle_type" name="vehicle_type">
											  <option value="none">Click to choose vehicle type</option>
											  
											  <% if (vehicle.vehicle_type == "small_car") { %>
											  <option selected="selected" value="small_car">Small Car</option>
											  <% } else { %>
											  <option value="small_car">Small Car</option>
											  <% } %>
											  
											  <% if (vehicle.vehicle_type == "medium_car") { %>
											  <option selected="selected"  value="medium_car">Medium Car</option>
											  <% } else { %>
											  <option value="medium_car">Medium
											  <% } %>
											  
											  <% if (vehicle.vehicle_type == "large_car") { %>
											  <option selected="selected" value="large_car">Large Car</option>
											  <% } else { %>
											  <option value="large_car">Large Car</option>
											  <% } %>
											  
											  <% if (vehicle.vehicle_type == "van") { %>
											  <option selected="selected" value="van">Van</option>
											  <% } else { %>
											  <option value="van">Van</option>
											  <% } %>
											  
											  <% if (vehicle.vehicle_type == "pickup_truck") { %>
											  <option selected="selected" value="pickup_truck">Pickup
											  Truck</option>
											  <% } else { %>
											  <option value="pickup_truck">Pickup
											  Truck</option>
											  <% } %>
											  
											  <% if (vehicle.vehicle_type == "trailer") { %>
											  
											  <option selected="selected" value="trailer">Trailer</option>
											  <% } else { %>
											  <option  value="trailer">Trailer</option>
											  <% } %>
											 
										
											  </select>
											</div>
										</div>
										<div class="row">
											<div class="12u">
												<input id="license_plate" name="license_plate" value="<%= vehicle.license_plate %>" type="text" class="text" />
											</div>
										</div>
								<!--		<div class="row">
											<div class="12u">
												<input id="vehicle_color" name="vehicle_color" placeholder="Vehicle Color" type="text" class="text" />
											</div>
										</div>
										<div class="row">
											<div class="12u">
												<input id="vehicle_make" name="vehicle_make" placeholder="Vehicle Make (Optional)" type="text" class="text" />
											</div>
										</div>
										<div class="row">
